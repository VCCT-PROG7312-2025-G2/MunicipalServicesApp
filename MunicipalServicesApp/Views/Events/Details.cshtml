@model MunicipalServicesApp.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        @Model.Title
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-warning">Featured</span>
                        }
                    </h4>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Events
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6><i class="fas fa-calendar text-primary me-2"></i>Event Date & Time</h6>
                        <p class="ms-4">@Model.EventDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-map-marker-alt text-primary me-2"></i>Location</h6>
                        <p class="ms-4">@Model.Location</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6><i class="fas fa-tag text-primary me-2"></i>Category</h6>
                        <p class="ms-4">
                            <span class="badge bg-info">@Model.Category</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-user text-primary me-2"></i>Organizer</h6>
                        <p class="ms-4">@Model.Organizer</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6><i class="fas fa-users text-primary me-2"></i>Attendance</h6>
                        <div class="ms-4">
                            <div class="progress mb-2" style="height: 10px;">
                                @{
                                    var attendancePercent = (double)Model.CurrentAttendees / Model.Capacity * 100;
                                    var progressClass = attendancePercent >= 80 ? "bg-warning" :
                                    attendancePercent >= 50 ? "bg-info" : "bg-success";
                                }
                                <div class="progress-bar @progressClass" role="progressbar"
                                     style="width: @attendancePercent%;"
                                     aria-valuenow="@attendancePercent" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">@Model.CurrentAttendees out of @Model.Capacity attendees (@attendancePercent.ToString("0")% full)</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-info-circle text-primary me-2"></i>Event Status</h6>
                        <p class="ms-4">
                            @if (Model.EventDate < DateTime.Now)
                            {
                                <span class="badge bg-secondary">Past Event</span>
                            }
                            else if (Model.CurrentAttendees >= Model.Capacity)
                            {
                                <span class="badge bg-danger">Fully Booked</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Open for Registration</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="mb-4">
                    <h6><i class="fas fa-align-left text-primary me-2"></i>Description</h6>
                    <p class="ms-4">@Model.Description</p>
                </div>

                @if (Model.EventDate > DateTime.Now && Model.CurrentAttendees < Model.Capacity)
                {
                    <div class="text-center mt-4">
                        <button class="btn btn-success btn-lg">
                            <i class="fas fa-calendar-plus me-2"></i>Register for this Event
                        </button>
                        <small class="d-block text-muted mt-2">
                            @(Model.Capacity - Model.CurrentAttendees) spots remaining
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>